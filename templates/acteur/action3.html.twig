        <tr> 
            <th scope="col">Nom Prenom</th> 
            <th scope="col">Date de naissance</th>
            <th scope="col">Nationalité</th>
        </tr> 
    </thead> 
        {%  set taille = '180px' %} 
        {% for acteur in acteurs %} 
