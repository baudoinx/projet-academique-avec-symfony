                <td> 
                {{ acteur.nomPrenom }} 
                </td> 
                <td> 
                {{ acteur.dateNaissance|date("m/d/Y") }} 
                </td> 
               <td> 
                {{ acteur.nationalite }} 
                </td> 
               
               
            </tr> 
